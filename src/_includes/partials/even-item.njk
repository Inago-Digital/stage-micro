<div
  class="border-gray border rounded-lg p-6 mb-6 w-full md:flex md:items-center md:justify-between"
>
  <p class="uppercase font-medium text-3xl md:w-32">
    {{ event.date | formatDate("EEE dd") }}
    <br class="hidden md:inline-block" />
    <span class="text-primary">
      {{ event.date | formatDate("MM") }}
    </span>
  </p>
  <div class="md:w-9/12">
    <h3 class="text-xl font-normal mt-4 md:mt-0">{{ event.title }}</h3>
    <p class="mt-3">{{ event.description }}</p>
  </div>
  <div class="flex gap-2 mt-6 md:flex-col md:w-48 md:mt-0 md:h-20">
    <a
      href="{{ event.eTicketLink }}"
      target="_blank"
      class="inline-block text-sm bg-primary-pale text-white flex items-center justify-center rounded hover:bg-primary transition-colors flex-1 h-10"
    >
      eVSTUPENKA
    </a>
    <a
      href="{{ event.gooutLink }}"
      target="_blank"
      class="inline-block text-sm bg-dark text-white flex items-center justify-center rounded hover:bg-black transition-colors flex-1 h-10"
    >
      vstupenky goout
    </a>
  </div>
</div>
